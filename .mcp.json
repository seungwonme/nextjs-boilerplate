{
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": ["@upstash/context7-mcp"]
    },
    "chrome-devtools": {
      "command": "bunx",
      "args": ["chrome-devtools-mcp@latest"]
    },
    "shadcn": {
      "command": "bunx",
      "args": ["bunx", "shadcn@latest", "mcp"]
    },
    "@21st-dev/magic": {
      "command": "bunx",
      "args": ["@21st-dev/magic@latest", "API_KEY=\"{$MAGIC_API_KEY}\""]
    },
    "Neon": {
      "command": "bunx",
      "args": ["mcp-remote@latest", "https://mcp.neon.tech/mcp"]
    },
    "cloudflare-documentation": {
      "command": "bunx",
      "args": ["mcp-remote", "https://docs.mcp.cloudflare.com/mcp"]
    },
    "cloudflare-bindings": {
      "command": "bunx",
      "args": ["mcp-remote", "https://bindings.mcp.cloudflare.com/mcp"]
    }
  }
}
